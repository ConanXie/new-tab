{
  "name": "material-design-new-tab",
  "version": "2.0.0",
  "description": "A Chrome new tab page extension with Material Design",
  "homepage": "https://tab.xiejie.co",
  "keywords": [
    "chrome",
    "browser extension",
    "new tab page",
    "material design"
  ],
  "author": {
    "name": "ConanXie",
    "email": "xjj416@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ConanXie/new-tab.git"
  },
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --progress --color --hot --config webpack/webpack.dev.conf.js",
    "build": "webpack --config webpack/webpack.prod.conf.js",
    "release": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./release.ps1",
    "lint": "eslint . --ext .ts,.tsx",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest --colors",
    "test:coverage": "jest --silent --coverage",
    "test:clear": "jest --clearCache"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/test.shim.js",
      "<rootDir>/test/test.setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^(config|utils|stores|components)(.*)": "<rootDir>/src/$1$2"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/test/test.preprocessor.js",
      "^.+\\.(css|less)$": "<rootDir>/test/test.ignore.js"
    },
    "testMatch": [
      "<rootDir>/(test|src)/**/*.test.(ts|tsx)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/index.{ts,tsx}",
      "!src/utils/**"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^4.9.12",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.51",
    "@material-ui/styles": "^4.9.10",
    "classnames": "^2.2.6",
    "clsx": "^1.1.0",
    "color": "^3.1.2",
    "date-fns": "^2.12.0",
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "mobx-react-lite": "^2.0.6",
    "notistack": "^0.9.11",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-color": "^2.18.0",
    "react-dom": "^16.13.1",
    "react-loadable": "^5.5.0",
    "shortid": "^2.2.15",
    "store2": "^2.11.1",
    "typeface-roboto": "0.0.75"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@hot-loader/react-dom": "^16.13.0",
    "@storybook/react": "^4.1.18",
    "@types/chrome": "0.0.103",
    "@types/classnames": "^2.2.10",
    "@types/color": "^3.0.1",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/react-color": "^3.0.1",
    "@types/react-dom": "^16.9.7",
    "@types/react-loadable": "^5.5.3",
    "@types/shortid": "0.0.29",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.8.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^3.0.4",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.2.1",
    "jest": "^25.5.2",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "react-hot-loader": "^4.12.21",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2",
    "terser-webpack-plugin": "^2.3.6",
    "typescript": "^3.8.3",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  }
}

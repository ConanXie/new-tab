{
  "name": "material-design-new-tab",
  "version": "2.0.0",
  "description": "A Chrome new tab page extension with Material Design",
  "homepage": "https://tab.xiejie.co",
  "keywords": [
    "chrome",
    "browser extension",
    "new tab page",
    "material design"
  ],
  "author": {
    "name": "ConanXie",
    "email": "xjj416@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ConanXie/new-tab.git"
  },
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --progress --color --hot --config webpack/webpack.dev.conf.js",
    "build": "webpack --config webpack/webpack.prod.conf.js",
    "release": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./release.ps1",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest --colors",
    "test:coverage": "jest --silent --coverage",
    "test:clear": "jest --clearCache"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/test.shim.js",
      "<rootDir>/test/test.setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^(config|utils|stores|components)(.*)": "<rootDir>/src/$1$2"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/test/test.preprocessor.js",
      "^.+\\.(css|less)$": "<rootDir>/test/test.ignore.js"
    },
    "testMatch": [
      "<rootDir>/(test|src)/**/*.test.(ts|tsx)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/index.{ts,tsx}",
      "!src/utils/**"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "dependencies": {
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "@material-ui/lab": "^3.0.0-alpha.30",
    "classnames": "^2.2.6",
    "color": "^3.1.0",
    "date-fns": "^2.0.0-alpha.27",
    "mobx": "^5.9.0",
    "mobx-react": "^5.4.3",
    "mobx-react-lite": "^1.1.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.5",
    "react-color": "^2.17.0",
    "react-dom": "^16.8.5",
    "react-loadable": "^5.5.0",
    "shortid": "^2.2.14",
    "store2": "^2.7.1",
    "typeface-roboto": "0.0.54"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-decorators": "^7.4.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@hot-loader/react-dom": "^16.8.4",
    "@storybook/react": "^4.1.12",
    "@types/chrome": "0.0.80",
    "@types/classnames": "^2.2.7",
    "@types/color": "^3.0.0",
    "@types/enzyme": "^3.9.1",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.8",
    "@types/react-color": "^2.17.0",
    "@types/react-dom": "^16.8.3",
    "@types/react-loadable": "^5.5.0",
    "@types/shortid": "0.0.29",
    "@types/webpack-env": "^1.13.9",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.5",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.5.0",
    "mini-css-extract-plugin": "^0.5.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "react-hot-loader": "^4.8.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "terser-webpack-plugin": "^1.2.3",
    "tslint": "^5.14.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.4000",
    "url-loader": "^1.1.2",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.2.1"
  }
}

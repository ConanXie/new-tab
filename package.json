{
  "name": "material-design-new-tab",
  "version": "2.0.0",
  "description": "A Chrome new tab page extension with Material Design",
  "homepage": "https://tab.xiejie.co",
  "keywords": [
    "chrome",
    "browser extension",
    "new tab page",
    "material design"
  ],
  "author": {
    "name": "ConanXie",
    "email": "xjj416@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ConanXie/new-tab.git"
  },
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --progress --color --config webpack/webpack.dev.conf.js",
    "build": "webpack --config webpack/webpack.prod.conf.js",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest --colors",
    "test:coverage": "jest --silent --coverage",
    "test:clear": "jest --clearCache"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/test.shim.js",
      "<rootDir>/test/test.setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/test/test.preprocessor.js",
      "^.+\\.(css|less)$": "<rootDir>/test/test.ignore.js"
    },
    "testMatch": [
      "<rootDir>/(test|src)/**/*.test.(ts|tsx)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/index.{ts,tsx}",
      "!src/utils/**"
    ]
  },
  "dependencies": {
    "@material-ui/icons": "^1.0.0-beta.43",
    "classnames": "^2.2.5",
    "date-fns": "^2.0.0-alpha.7",
    "material-ui": "^1.0.0-beta.47",
    "mobx": "^4.2.1",
    "mobx-react": "^5.1.2",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-color": "^2.14.1",
    "react-dom": "^16.3.2",
    "shortid": "^2.2.8",
    "stackblur-canvas": "^1.4.1",
    "store2": "^2.7.0",
    "typeface-roboto": "0.0.54"
  },
  "devDependencies": {
    "@storybook/react": "^4.0.0-alpha.4",
    "@types/chrome": "0.0.65",
    "@types/classnames": "^2.2.3",
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.14",
    "@types/react-color": "^2.13.5",
    "@types/react-dom": "^16.0.5",
    "@types/react-test-renderer": "^16.0.1",
    "@types/shortid": "0.0.29",
    "@types/webpack-env": "^1.13.6",
    "awesome-typescript-loader": "^5.0.0",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "react-hot-loader": "^4.1.3",
    "react-test-renderer": "^16.3.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "tslint": "^5.10.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.8.3",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.8.1",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2"
  }
}

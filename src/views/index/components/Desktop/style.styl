.desktop
  box-sizing border-box
  height 100vh
  overflow hidden

  &.toolbar
    padding-top 64px

flex-center()
  display flex
  flex-direction column
  align-items center
  justify-content center

.page
  display grid
  align-items stretch
  justify-items stretch
  position relative
  width 100%
  height 100%
  overflow hidden

.wrap
  --shortcut-size clamp(48px, 5.5vw, 96px)
  --shortname-font-size clamp(12px, 1vw, 16px)
  --shortname-height calc(var(--shortname-font-size) * 1.75)
  position relative
  height 100%
  flex-center()
  user-select none

  &[aria-grabbed=true]
    visibility hidden

  &.grabbing
    position absolute
    top 0
    left 0
    z-index 2000

    .shortcut,
    .folder
      cursor grabbing

    .shortcut-name
      visibility hidden

  &.from-folder
    .shortcut-name
      display none

  &.grabbed
    transition transform 0.2s cubic-bezier(0.333, 0, 0, 1)

  .shortcut
    flex-center()
    flex-direction column
    text-decoration none
    opacity 1
    transition 0.2s opacity ease-in-out

    &:hover
      opacity 1

    &.touched .shortcut-icon
      &::before,
      &::after
        opacity 1
        transform translate(-50%, -50%) scale(1)

  .shortcut-icon
    position relative
    width var(--shortcut-size)
    height var(--shortcut-size)

    &::before,
    &::after
      content ''
      z-index -1
      display block
      position absolute
      left 50%
      top 50%
      border-radius 50%
      transform translate(-50%, -50%) scale(0.7)
      opacity 0
      transition 0.15s transform ease-in, 0.15s opacity ease-in

    &::before
      width 96%
      height 96%
      background-color #fff

    &::after
      width 110%
      height 110%
      background-color rgba(255, 255, 255, 0.5)

    img
      position relative
      width 100%
      height 100%
      object-fit cover

  .shortcut-name
    max-width 8em
    min-height var(--shortname-height)
    font-size var(--shortname-font-size)
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

    &.shadow
      text-shadow 0 1px 2px rgba(0, 0, 0, 0.36)

.widget-wrap
  // flex-center()
  h1
    font-weight normal
    font-size clamp(36px, 6.5vw, 160px)
    color #daceff
    text-align center
    line-height 1

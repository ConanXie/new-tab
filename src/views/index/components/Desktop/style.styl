toolbar-height = 64px
.desktop
  height "calc(100vh - %s)" % toolbar-height
  margin-top toolbar-height
  overflow hidden

flex-center()
  display flex
  align-items center
  justify-content center

.page
  position relative
  width 100%
  height 100%
  overflow hidden
.wrap
  position absolute
  top 0
  left 0
  flex-center()
  &[aria-grabbed=true] {
    visibility hidden
  }

  &.grabbing
    a
      cursor grabbing
    p
      visibility hidden
  &.grabbed
    transition transform 0.2s cubic-bezier(0.333, 0, 0, 1)

  a
    flex-center()
    flex-direction column
    text-decoration none
    opacity 1
    transition .2s opacity ease-in-out
    &:hover
      opacity 1
  img
    width 5.5vw
    max-width 96px
    min-width 24px
  p
    max-width 8em
    margin-top 6px
    font-size 16px
    color #333
    text-shadow 0 1px 2px rgba(0, 0, 0, 0.36)
    white-space: nowrap;
    overflow hidden
    text-overflow ellipsis

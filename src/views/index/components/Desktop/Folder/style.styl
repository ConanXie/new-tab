.folder
  overflow hidden
  box-sizing border-box
  display grid
  grid-template-columns repeat(2, 1fr)
  width 5.5vw
  height 5.5vw
  max-width 96px
  max-height 96px
  min-width 24px
  min-height 24px
  border 2px solid #fff
  border-radius 50%
  background-color rgba(255, 255, 255, .6)
  transform scale(0.9)

  & > div
    display flex
    align-items center
    justify-content center
    img
      width 90%

  &.two
    grid-gap 15px
    & > div
      transform scale(1.3)
      img
        width 95%
  
  

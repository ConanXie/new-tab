.folder-wrap
  position relative
  display flex
  justify-content center
  align-items center
  &::after
    content ""
    z-index -1
    display block
    position absolute
    left 50%
    top 50%
    border-radius 50%
    transform translate(-50%, -50%) scale(0.7)
    transition .15s transform ease-in, .15s opacity ease-in
    width 108%
    height 108%
    background-color rgba(255, 255, 255, 0.5)
    opacity 0

.touched .folder-wrap
  &::after
    transform translate(-50%, -50%) scale(.97)
    opacity 1

.folder
  overflow hidden
  box-sizing border-box
  display grid
  grid-template-columns repeat(2, 1fr)
  width 5.5vw
  height 5.5vw
  max-width 96px
  max-height 96px
  min-width 48px
  min-height 48px
  border 2px solid #fff
  border-radius 50%
  background-color rgba(255, 255, 255, .6)
  transform scale(0.9)

  & > div
    display flex
    align-items center
    justify-content center
    height 100%
    img
      width 95%

  &.two
    img
      width 110%
    & > div
      &:first-child img
        margin-left -25%
      &:last-child img
        margin-right -25%

  &.three
    img
      width 105%
    & > div
      &:first-child
      &:nth-child(2)
        padding-top 10.57%
      
      &:first-child img
        margin-left -20%
      &:nth-child(2) img
        margin-right -20%

      &:last-child
        grid-column 1 / 3
        img
          width 52.5%
  

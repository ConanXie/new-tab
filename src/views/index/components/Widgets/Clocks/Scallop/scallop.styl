.scallop-clock
  display inline-flex
  position relative
  user-select none
  transform 'scale(calc(min(var(--desktop-cell-width), var(--desktop-cell-height)) / 100))' % null
  visibility var(--visibility)
  --hand-height 8px
  --second-hand-translate 33.5px
  --hand-scale 0.91
  --dail-radius 50px


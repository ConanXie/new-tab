    background var(--color-scallop-dail)
    // backdrop-filter saturate(180%) blur(24px)

  .hand
    position absolute
    top 50%
    left 50%
    transform-origin calc((var(--hand-height) / 2)) center
    height var(--hand-height)
    border-radius var(--hand-height)

  .hand.hour
    width calc((27.5px / var(--hand-scale)))
    background var(--color-scallop-hour)

  .hand.minute
    width calc((35px / var(--hand-scale)))
    background var(--color-scallop-minute)

  .hand.second
    width 9px
    height 9px
    border-radius 50%
    transform-origin calc(var(--second-hand-translate) * -1) center

    &::before
      content ''
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      // background-color rgb(254 215 224)
      // background-color rgb(95, 102, 49)
      background var(--color-scallop-second)
      border-radius 50%
      transform scale(0.98)

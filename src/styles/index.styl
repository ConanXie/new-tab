body,
ul,
dl,
dt,
dd,
h1,
h2,
h3,
p
  margin 0

ul,
th,
td
  padding 0

@font-face 
  font-family Weather
  src url(../fonts/Weather.woff2)

html
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

body
  font 16px Roboto, "Microsoft Yahei"
  overflow hidden

input
  font-family inherit

#app
  width 100vw
  height 100vh
  overflow auto

#bg, #mask
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  z-index -1

#bg
  background-size cover
  background-position center
  transition background-image 0.3s cubic-bezier(0.215, 0.610, 0.355, 1)

.chrome-picker
  margin 0 auto
  box-shadow none !important
  background-color transparent !important
  input
    background-color rgba(255, 255, 255, 0.5) !important
    box-shadow: rgba(180, 180, 180, 0.5) 0px 0px 0px 1px inset !important

::-webkit-scrollbar
  width 0
  background-color transparent

::-webkit-scrollbar-track-piece
  background-color transparent

::-webkit-scrollbar-thumb
  background #f5f5f5

::-webkit-scrollbar-thumb:vertical:hover
  background #9e9e9e


.contextmenu
  position fixed
  visibility hidden
  z-index 1500
